@model Contacto

<!DOCTYPE html>
<html>
<head>
    <title>Contacto</title>
</head>
<body>
    <h1>Contacto</h1>
    
    <form method="post" action="/Controlador/EnviarContacto">
        <div>
            <label for="Name">Nombre:</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" />
        </div>
        
        <div>
            <label for="Email">Correo electrónico:</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" />
        </div>
        
        <div>
            <label for="Phone">Teléfono:</label>
            <input type="text" id="Phone" name="Phone" value="@Model.Phone" />
        </div>
        
        <div>
            <label for="Question">Pregunta:</label>
            <textarea id="Question" name="Question">@Model.Question</textarea>
        </div>
        
        <button type="submit">Enviar</button>
    </form> 
</body>
</html>